@using toyiyo.todo.Web.Startup
@model toyiyo.todo.Projects.Dto.ProjectDto
@{
    ViewBag.Title = L("Forecast");
    ViewBag.CurrentPageName = PageNames.Forecast;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="page-header">@L("ForecastTitle{0}", Model.Title)</h1>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="alert alert-info" role="alert">
                @L("ForecastInfoAlert")
            </div>
        </div>
    </div>
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@L("OptimisticCompletionDate")</h5>
                </div>
                <div class="card-body">
                    <p id="optimisticDate" class="card-text"></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@L("EstimatedCompletionDate")</h5>
                </div>
                <div class="card-body">
                    <p id="estimatedDate" class="card-text"></p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">@L("ConservativeCompletionDate")</h5>
                </div>
                <div class="card-body">
                    <p id="conservativeDate" class="card-text"></p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <div class="form-group">
                <label for="levelSelect">@L("SelectJobLevel")</label>
                <select id="levelSelect" class="form-control">
                    <option value="0">@L("Tasks")</option>
                    <option value="2">@L("Epics")</option>
                </select>
            </div>
        </div>
        <div class="card-body">
            <canvas id="forecastChart"></canvas>
        </div>
    </div>
</div>

@section scripts {
    <environment names="Development">
        <script src="~/libs/chartjs/dist/Chart.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Forecast/Index.js"></script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/view-resources/Views/_Bundles/home-index.min.js" asp-append-version="true"></script>
        <script src="~/view-resources/Views/Forecast/Index.min.js"></script>
    </environment>

    <script>
        var projectId = '@Model.Id';  // Pass projectId to JavaScript
    </script>
}
