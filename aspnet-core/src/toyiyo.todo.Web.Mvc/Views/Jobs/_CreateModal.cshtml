@using toyiyo.todo.Web.Models.Common.Modals
@model toyiyo.todo.Web.Models.Jobs.JobListViewModel
@{
    Layout = null;
}
<div class="modal fade" id="JobCreateModal" tabindex="-1" role="dialog" aria-labelledby="JobCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewJob")))
            <form name="JobCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label" for="jobtitle">@L("JobTitle")</label>
                        <div class="col-md-9">
                            <input id="jobtitle" type="text" name="title" class="form-control" required maxlength="500" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="jobLevel">@L("JobType")</label>
                        <div class="col-md-9">
                            <select id="jobLevel" name="level" class="form-control">
                                <option value="0">Task</option>
                                <option value="2">Epic</option>
                                <option value="3">Bug</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="parentId">@L("Parent Epic")</label>
                        <div class="col-md-9">
                            <select id="parentId" name="parentId" class="form-control">
                                <option value="">No Parent</option>
                            </select>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
