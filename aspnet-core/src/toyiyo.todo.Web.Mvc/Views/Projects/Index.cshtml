@using toyiyo.todo.Web.Startup
@model toyiyo.todo.Web.Models.Projects.ProjectListViewModel
@{
    ViewBag.Title = L("Projects");
    ViewBag.CurrentPageName = PageNames.Projects;
}
@section scripts {}

<section class="content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h1>@L("Projects")</h1>
        </div>
        <div class="col-sm-6">
            <a href="javascript:;" data-toggle="modal" data-target="#ProjectCreateModal" class="btn bg-blue float-sm-right">
                <i class="fa fa-plus-square"></i>
                @L("Create")
                </a>
        </div>
    </div>
</section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-6">
                                <!--Use for bulk actions-->
                            </div>
                            <div class="col-md-6">
                                @await Html.PartialAsync("~/Views/Projects/Index.AdvancedSearch.cshtml")
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="ProjectsTable" class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>@L("ProjectName")</th>
                                        <th>@L("DisplayName")</th>
                                        <th style="width: 150px">@L("Actions")</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var project in Model.Projects) {
                                    <tr>
                                        <td>
                                            <input type="checkbox" name="selectedIds" value="@project.Id" />
                                        </td>
                                        <td>@project.Title</td>
                                        <td>@project.Description</td>
                                        <td>
                                            <a href="javascript:;" data-toggle="modal" data-target="#ProjectEditModal" data-id="@project.Id" class="btn btn-primary btn-sm">
                                                <i class="fa fa-edit"></i>
                                                @L("Edit")
                                            </a>
                                            <a href="javascript:;" data-toggle="modal" data-target="#ProjectDeleteModal" data-id="@project.Id" class="btn btn-danger btn-sm">
                                                <i class="fa fa-trash"></i>
                                                @L("Delete")
                                            </a>
                                        </td>
                                    </tr> }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
<section class="content">

</section>

@await Html.PartialAsync("~/Views/Projects/_CreateModal.cshtml", Model)