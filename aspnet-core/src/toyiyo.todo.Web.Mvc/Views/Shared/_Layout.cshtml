<!-- Add these in the head section -->

<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
</head>

<!-- Add these just before the closing body tag, after jQuery but before your application scripts -->

<body>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"
        integrity="sha256-lSjKY0/srUM9BE3dPm+c4fBo1dky2v27Gdjm2uoZaL0=" crossorigin="anonymous"></script>
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/lib/abp-web-resources/Abp/Framework/scripts/libs/abp.signalr-client.js"></script>
    <script src="~/js/signalr-manager.js"></script>
    <script>
        // Clear old event handlers to avoid conflict
        abp.event.off('abp.notifications.received');

        // Register notification event handler
        abp.event.on('abp.notifications.received', function (userNotification) {
            abp.notifications.showUiNotifyForUserNotification(userNotification);
        });

        // Initialize SignalR connection
        $(document).ready(function () {
            app.signalr.connect();
        });
    </script>
    @RenderSection("scripts", required: false)
</body>

</html>
