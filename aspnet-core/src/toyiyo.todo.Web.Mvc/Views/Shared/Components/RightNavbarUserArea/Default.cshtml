@model toyiyo.todo.Web.Views.Shared.Components.RightNavbarUserArea.RightNavbarUserAreaViewModel
<li class="nav-item dropdown nav-user-menu">
    <a href="javascript:void(0);" class="nav-link" data-toggle="dropdown" role="button">
        <div class="user-initials elevation-2" title=@Model.GetShownLoginName()>@Model.GetUserInitials()</div>
    </a>
    <div class="dropdown-menu dropdown-menu-right">
        <a class="dropdown-item" asp-controller="Users" asp-action="ChangePassword">
            <i class="fas fa-user-edit"></i> @L("UpdatePassword")
        </a>
        @if (IsGranted("Pages.Subscription")){
            <a class="dropdown-item" asp-controller="Subscriptions" asp-action="Index">
                <i class="fas fa-credit-card"></i> @L("Subscription")
            </a>
            <a class="dropdown-item" asp-controller="Invitations" asp-action="Index">
                <i class="fas fa-envelope"></i> @L("Invitations")
            </a>
        }
        <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
            <i class="fas fa-sign-out-alt"></i> @L("Logout")
        </a>
    </div>
</li>

