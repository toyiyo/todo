<div class="advanced-search">
    <form id="SearchForm" class="form-horizontal" onsubmit="return false;">
        <div class="input-group">
            <div class="input-group-prepend">
                <button type="button" id="btnAdvancedSearch" class="btn bg-blue btn-search">
                    <span class="fas fa-search" aria-hidden="true"></span>
                </button>
            </div>
            <input type="search" name="Keyword" id="keyword" class="form-control txt-search" 
                   placeholder=@L("Search") 
                   aria-label=@L("Search")
                   aria-describedby="btnAdvancedSearch" />
