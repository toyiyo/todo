@using Abp.Authorization.Users
@using Abp.MultiTenancy
@using toyiyo.todo.MultiTenancy
@using toyiyo.todo.Web.Models.Common.Modals
@{
    Layout = null;
}
<div class="modal fade" id="TenantCreateModal" tabindex="-1" role="dialog" aria-labelledby="TenantCreateModalLabel" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            @await Html.PartialAsync("~/Views/Shared/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("CreateNewTenant")))
            <form name="tenantCreateForm" role="form" class="form-horizontal">
                <div class="modal-body">
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("DomainName")</label>
                        <div class="col-md-9">
                            <input type="text" name="TenancyName" class="form-control form-control-lg" required maxlength="@AbpTenantBase.MaxTenancyNameLength" minlength="2">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("CompanyName")</label>
                        <div class="col-md-9">
                            <input type="text" name="Name" class="form-control form-control-lg"  required maxlength="@Tenant.MaxNameLength">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("AdminEmailAddress")</label>
                        <div class="col-md-9">
                            <input type="email" name="AdminEmailAddress" class="form-control form-control-lg"  required maxlength="@AbpUserBase.MaxEmailAddressLength">
                        </div>
                    </div>
                    <div class="form-group row required">
                        <label class="col-md-3 col-form-label">@L("Password")</label>
                        <div class="col-md-9">
                            <input type="password" name="Password" class="form-control form-control-lg" placeholder="@L("Password")" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label">@L("DatabaseConnectionString") (@L("Optional"))</label>
                        <div class="col-md-9">
                            <input type="text" name="ConnectionString" class="form-control form-control-lg"  maxlength="@AbpTenantBase.MaxConnectionStringLength">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="CreateTenantIsActive">@L("IsActive")</label>
                        <div class="col-md-9">
                            <input id="CreateTenantIsActive" type="checkbox" name="IsActive" value="true" checked />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 col-form-label" for="AllowsSelfRegistration">@L("AllowsSelfRegistration")</label>
                        <div class="col-md-9">
                            <input id="CreateAllowsSelfRegistration" type="checkbox" name="AllowsSelfRegistration" value="false" />
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Shared/Modals/_ModalFooterWithSaveAndCancel.cshtml")
            </form>
        </div>
    </div>
</div>
