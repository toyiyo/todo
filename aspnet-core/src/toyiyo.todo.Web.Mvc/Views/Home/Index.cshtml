@using toyiyo.todo.Web.Startup
@model toyiyo.todo.Jobs.Dto.JobStatsDto
@{
    ViewBag.Title = L("HomePage");
    ViewBag.CurrentPageName = PageNames.Home;
}

@section scripts
    {
        <environment names="Development">
            <script src="~/libs/chartjs/dist/Chart.js" asp-append-version="true"></script>
            <script src="~/view-resources/Views/Home/Index.js" asp-append-version="true"></script>
        </environment>

        <environment names="Staging,Production">
            <script src="~/view-resources/Views/_Bundles/home-index.min.js" asp-append-version="true"></script>
        </environment>
}

<div id="home-page-stats-data" class="hidden" data-completed-monthly="@ViewBag.TotalCompletedJobsPerMonth"></div>

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0 text-dark">@L("HomePage")</h1>
            </div>
        </div>
    </div>
</div>
<section class="content">
<div class="container-fluid">
<!-- Info boxes -->
<div class="row">
    <!-- /.col -->
    <div class="col-12 col-sm-6 col-md-3">
        <div class="info-box mb-3">
            <span class="info-box-icon bg-danger elevation-1">
                <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-list-ul" viewBox="0 0 16 16">
